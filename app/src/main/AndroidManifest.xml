<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apps.luke.margin">
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name="com.apps.luke.margin.Utils.GlobalVariables"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.apps.luke.margin.Views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.apps.luke.margin.Views.AdminActivity"/>
        <activity android:name="com.apps.luke.margin.Views.CompleteActivity"/>
        <activity android:name="com.apps.luke.margin.Views.CreateActivity"/>
        <activity android:name="com.apps.luke.margin.Views.EditActivity"/>
        <activity android:name="com.apps.luke.margin.Views.PastActivity"/>
        <activity android:name="com.apps.luke.margin.Views.UserActivity"/>
        <activity android:name="com.apps.luke.margin.Views.TextActivity"/>
        <activity android:name="com.apps.luke.margin.Views.UpdateUserActivity"/>
        <activity android:name="com.apps.luke.margin.Views.StatisticsActivity"/>

    </application>

</manifest>
